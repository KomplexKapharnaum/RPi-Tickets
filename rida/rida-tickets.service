[Unit]
Description=RIDA Tickets printer
           
[Service]
Type=simple
Environment="FLASK_APP=app.py"
Environment="FLASK_ENV=development"
WorkingDirectory=/root/RPi-Tickets/rida
ExecStart=/bin/bash -c '. venv/bin/activate; flask run --host=0.0.0 --port=80'
ExecStop=/bin/fuser -k 80/tcp
Restart=always
           
[Install]
WantedBy=default.target
